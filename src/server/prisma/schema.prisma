// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id               String   @id
  username         String
  password         String
  email            String?   @unique 
  role             Int      @default(0)
  created_at       DateTime
  updated_at       DateTime
  is_deleted       Boolean  @default(false)
  user             User?
  courses          Course[] @relation("CreatedBy")
}

model User {
  id               String   @id
  full_name        String  
  gender           Int
  birth            DateTime  
  current_address  String 
  original_address String 
  created_at       DateTime
  updated_at       DateTime
  is_deleted       Boolean  @default(false)
  account          Account  @relation(fields: [acc_id], references: [id])
  acc_id           String   @unique 
}

model Course {
  id           String   @id @default(uuid())
  title        String
  description  String   @db.Text
  image        String?
  price        Float    @default(0)
  status      Int      @default(1)
  created_by   Account  @relation("CreatedBy", fields: [author_id], references: [id])
  author_id    String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  is_deleted   Boolean  @default(false)
  videos       Video[]  @relation("CourseVideos")
}

model Video {
  id           String   @id @default(uuid())
  title        String
  description  String   @db.Text
  url          String
  size         Int      @default(0)
  duration     Int      @default(0)
  status       String   @default("Đang xử lý")
  order        Int      @default(0)
  course       Course   @relation("CourseVideos", fields: [course_id], references: [id])
  course_id    String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  is_deleted   Boolean  @default(false)
}
